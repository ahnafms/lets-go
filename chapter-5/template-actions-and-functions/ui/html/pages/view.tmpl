{{define "title"}}Snippet #{{.Snippet.ID}}{{end}}

{{define "main"}}
    <div class='snippet'>
      {{if .Snippets}}
        <table>
        <tr>
        <th>Title</th>
        <th>Created</th>
        <th>ID</th>
        </tr>
        {{range .Snippets}}
        <tr>
        <td><a href='/snippet/view/{{.ID}}'/>{{.Title}}</td>
        <td>{{.Created}}</td>
        <td>#{{.ID}}</td>
        </tr>
        {{end}}
        </table>
        {{else}}
          <p>There's nothing to see here...</p>
        {{end}}
    </div>
{{end}}
